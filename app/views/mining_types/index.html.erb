<p id="notice"><%= notice %></p>

<h1><%= I18n.t('mining_types.table_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('mining_types.description') %></th>
      <th><%= I18n.t('mining_types.acronym') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to I18n.t('links.show'), mining_type %></td>
        <td><%= link_to I18n.t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to I18n.t('links.delete'), mining_type, method: :delete, data: { confirm: I18n.t('links.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('mining_types.new_mining_type'), new_mining_type_path %>
