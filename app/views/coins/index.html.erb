        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Deletar', coin, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

