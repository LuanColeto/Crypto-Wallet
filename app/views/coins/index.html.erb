<p id="notice"><%= notice %></p>

<h1><%= I18n.t('coins.table_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('coins.description') %></th>
      <th><%= I18n.t('coins.acronym') %></th>
      <th><%= I18n.t('coins.image') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, width: 25, height: 25 %></td>
        <td><%= @choosen_mining_type %></td>
        <td><%= link_to I18n.t('links.show'), coin %></td>
        <td><%= link_to I18n.t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to I18n.t('links.delete'), coin, method: :delete, data: { confirm: I18n.t('links.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('coins.new_coin'), new_coin_path %>
